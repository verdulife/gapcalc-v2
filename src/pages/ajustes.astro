---
import { db, PaperTable, PlotterTable } from "astro:db";

import Layout from "@/layouts/Layout.astro";
import OptionsComponent from "@/components/Options.svelte";

const papers = await db.select().from(PaperTable);
const plotters = await db.select().from(PlotterTable);
---

<Layout title="Ajustes">
  <OptionsComponent client:load papers={papers} plotters={plotters} />
</Layout>
